NAME = philo_bonus
CC = cc
CFLAGS = -Wall -Wextra -Werror
RM = rm -rf

SRC = philo_bonus.c Utils/initialize.c Utils/parce.c Utils/time.c \
		Utils/utils.c Utils/routine.c Utils/actions.c \

OBJ = $(SRC:.c=.o)

all: header $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -pthread -o $(NAME)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

header :
